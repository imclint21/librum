@model List<Article>
@{
    ViewData["Title"] = "Welcome to " + Configuration.GetValue<string>("BlogName");
}
@if(Configuration.GetSection("Configuration").GetValue<bool>("DisplayHeader"))
{
    <div class="text-center py-5 mt-2">
        <h1 class="display-5 mt-3">@(Configuration.GetValue<string>("BlogName"))</h1>
        <p>@(Configuration.GetValue<string>("Description"))</p>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12 pt-5 px-4 mx-2">
                <h5>Recent Posts:</h5>
            </div>
        </div>
    </div>
}
<section id="articles" class="pb-4">
    <div class="container">
        @foreach(var article in Model)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="card border-0 mb-1">
                        <div class="card-body">
                            @if(User.Identity.IsAuthenticated)
                            {
                                <div class="float-right">
                                    <a asp-controller="Article" asp-action="Edit" asp-route-slugArticle="@(article.Slug)" class="btn btn-sm btn-outline-secondary">Edit Article</a>
                                    <a asp-controller="Article" asp-action="Delete" asp-route-slugArticle="@(article.Slug)" onclick="return confirm('Do you really want to delete this article ?');" class="btn btn-sm btn-outline-danger">Delete Article</a>
                                </div>
                            }
                            <h3 class="card-title">
                                <a asp-controller="Article" asp-action="Article" asp-route-slugArticle="@article.Slug" class="inherit">@article.Title</a>
                            </h3>
                            <p class="card-text">@article.Description</p>
                            <p class="card-text"><small class="text-muted">Last edited @(article.WritedDatetime.TimeAgo()) &bull; @(article.Content.WordsCount()) words at most</small></p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>